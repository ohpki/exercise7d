<table class='table'>

  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows
    <%= link_to "#{user.following_user.count}", follows_user_path(user) %></th>
  </tr>
  <th>followerss
    <%= link_to "#{user.follower_user.count}", followers_user_path(user) %></th>
  </tr>
</table>

　　　　<% if current_user != user %>
          <% if current_user.following?(user) %>
           <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn-sm btn-danger" %>
           <% else %>
           <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class:"btn-sm btn-success" %>
           <% end %>
           <% end %>



<div class='row'>
  <% if current_user == user %>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
  <% end %>
</div>